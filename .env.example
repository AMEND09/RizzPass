# Environment variables for local development and Vercel
# Copy to .env for local dev (do NOT commit secrets)

# JSON Web Token secret used to sign session tokens
JWT_SECRET=replace-with-a-secure-random-string

# For local dev using SQLite (default)
DATABASE_PATH=./passwords.db

# For production on Vercel you should provision a managed database (Postgres) and set DATABASE_URL
# Example: postgresql://user:password@host:5432/dbname
DATABASE_URL=

# Public base URL used by WebAuthn origin checks in dev (http://localhost:3000)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Node environment
NODE_ENV=development

# Optional: set when deploying to a different host
# NEXTAUTH_URL or other host-specific values your deployment may need
